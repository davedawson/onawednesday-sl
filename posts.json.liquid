[
{% for post in site.posts %}
  {
    "id": "{{ post.id }}",
    "data": {
      "title": "{{ post.title | escape }}",
      "image": "/img/thumbs/{{ post.assets.first.filename | replace: '.jpg', '-500x350.jpg'}}",
      "url": "{{ post.url | escape }}",
      "description": "{{ post.meta['Description'] | escape }}"
    }

  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
